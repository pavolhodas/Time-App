<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Time_App.TimerPage"
             Title="Časovač">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" BackgroundColor="Black">
        <Frame HasShadow="False" BorderColor="DarkGoldenrod" Padding="60,50,60,50">
            <StackLayout Orientation="Vertical">
                <Label HorizontalOptions="Center" FontSize="24" Text="Timer"/>
                <Label HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" Grid.Column="1" FontSize="30">
                <Label.FormattedText>
                    <FormattedString>
                            <Span TextColor="DarkGoldenrod" Text="{Binding StopWatchHours}"/>
                            <Span TextColor="DarkGoldenrod" Text=":"/>
                            <Span TextColor="DarkGoldenrod" Text="{Binding StopWatchMinutes}"/>
                            <Span TextColor="DarkGoldenrod" Text=":"/>
                            <Span TextColor="DarkGoldenrod" Text="{Binding StopWatchSeconds}"/>
                    </FormattedString>
                </Label.FormattedText>
                </Label>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>