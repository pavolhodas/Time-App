<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             x:Class="Time_App.MainPage"
             Title="{Binding LabelText}">

    <StackLayout BackgroundColor="Black">
        <Button Text="{Binding DateTime, StringFormat='{0:T}'}" Command="{Binding ButtonClickedCommand}" FontSize="70" HorizontalOptions="Center" VerticalOptions="FillAndExpand" TextColor="Gray" BackgroundColor="Black" ></Button>
        <Button Text="Stopky" Clicked="Button_Clicked" VerticalOptions="EndAndExpand" HorizontalOptions="StartAndExpand" BackgroundColor="Black" FontSize="Large" TextColor="Gray"/>
    </StackLayout>

</ContentPage>
