       x:Class="Time_App.ShellApp">

    <TabBar Shell.BackgroundColor="WhiteSmoke" Shell.TitleColor="Black">
        <Tab Title="Budík">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Title="Svetový čas">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Title="Časovač">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}"/>
        </Tab>

        <Tab Title="Stopky">
